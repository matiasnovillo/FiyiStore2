@page "/FiyiStore/Client"
@model FiyiStore.Areas.FiyiStore.Pages.ClientModel

@{
    Layout = "_LayoutDashboard";
    ViewData["Title"] = "Buscar client";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-12 position-relative z-index-2">
            <div class="container-fluid px-2 px-md-4">
                <div class="page-header min-height-300 border-radius-xl mt-4"
                     style="background-image: url('/img/BasicCore/DashboardImage.png');">
                    <span class="mask bg-gradient-dark opacity-6"></span>
                </div>
                <div class="card card-body mx-3 mx-md-4 mt-n6">
                    <div class="row gx-4 mb-2">
                        <div class="col-auto">
                            <div class="avatar avatar-xl position-relative ml-3">
                                <img src="/img/CMSCore/User.png"
                                     alt="profile_image"
                                     class="w-100 border-radius-lg shadow-sm">
                            </div>
                        </div>
                        <div class="col-auto my-auto">
                            <div class="h-100">
                                <h2 class="mb-1">
                                    @ViewData["Email"]
                                </h2>
                                <p class="mb-0 font-weight-normal text-sm">

                                </p>
                            </div>
                            <hr />
                        </div>
                        <div class="col-lg-4 col-md-6 my-sm-auto ms-sm-auto me-sm-0 mx-auto mt-3">
                            &nbsp;
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <h4 class="mt-4 mb-4" id="title-page">
                                Buscar client
                            </h4>
                            <hr class="bg-dark" />
                            <div class="row">
                                <div class="col-8">
                                    <form>
                                        <div class="input-group input-group-dynamic mb-4">
                                            <span class="input-group-text"
                                                  id="search-button">
                                                <i class="fas fa-search" aria-hidden="true"></i>
                                            </span>
                                            <input class="form-control" 
                                            placeholder="Buscar client por ClientId..." 
                                            type="text"
                                            id="query-string">
                                        </div>
                                    </form>
                                </div>
                                <div class="col-4">
                                    <div class="nav-wrapper position-relative end-0">
                                        <ul class="nav nav-pills nav-fill p-1" role="tablist">
                                            <li class="nav-item">
                                                <a class="nav-link mb-0 px-0 py-1 active" 
                                                data-bs-toggle="tab"
                                                href="#tab-list"
                                                role="tab" 
                                                aria-controls="list" 
                                                aria-selected="true">
                                                    Lista
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link mb-0 px-0 py-1" 
                                                data-bs-toggle="tab" 
                                                href="#tab-table" 
                                                role="tab" 
                                                aria-controls="table" 
                                                aria-selected="false">
                                                    Tabla
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="me-auto my-auto text-start">
                                        <div class="tab-content" id="v-pills-tabContent">
                                            <div class="tab-pane fade" id="tab-table" role="tabpanel" aria-labelledby="table">
                                                The reading of all good books is like a conversation with the finest minds of past centuries.
                                            </div>
                                            <div class="tab-pane fade show active" id="tab-list" role="tabpanel" aria-labelledby="list">
                                                <div id="body-list row">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions{
    public void OnGet()
    {
    }
}

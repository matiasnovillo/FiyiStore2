@page "/Login"
@model FiyiStore.Areas.CMSCore.Pages.LoginModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}

<div class="page-header align-items-start min-height-300 m-3 border-radius-xl" style="background-image: url('https://images.unsplash.com/photo-1491466424936-e304919aada7?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1949&q=80');" loading="lazy">
    <span class="mask bg-gradient-dark opacity-6"></span>
</div>
<div class="container mb-4">
    <div class="row mt-lg-n12 mt-md-n12 mt-n12 justify-content-center">
        <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
            <div class="card mt-8">
                <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                    <div class="bg-gradient-success shadow-success border-radius-lg py-3 pe-1 text-center py-4">
                        <h4 class="font-weight-bolder text-white mt-1">
                            ¿Deseas entrar?
                        </h4>
                        <p class="mb-1 text-sm text-white">
                            Momento de ingresar tus credenciales
                        </p>
                    </div>
                </div>
                <div class="card-body">
                    <form role="form" class="text-start needs-validation" novalidate>
                        <div class="input-group input-group-static mb-4">
                            <label>
                                <i class="fas fa-envelope"></i>
                                Email
                            </label>
                            <input type="email"
                                id="email"
                                class="form-control" 
                                placeholder="mnovillo@emptyproject.com">
                        </div>
                        <div class="input-group input-group-static mb-4">
                            <label>
                                <i class="fas fa-key"></i>
                                Contraseña
                            </label>
                            <input type="password" id="password" class="form-control">
                        </div>
                        <div class="text-center">
                            <button type="submit"
                                id="loginbutton"
                                class="btn bg-gradient-success w-100 mt-3 mb-0">
                                <i class="fas fa-unlock"></i>
                                Entrar
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center pt-3 px-lg-2 px-1">
                    <p class="mb-4 text-sm mx-auto">
                        ¿No tienes cuenta?
                        <a href="javascript:;" 
                        class="text-success text-gradient font-weight-bold">
                            Creá una
                        </a>
                    </p>
                    <p class="mb-4 text-sm mx-auto">
                        ¿Olvidaste tu contraseña?
                        <a href="javascript:;"
                           class="text-success text-gradient font-weight-bold">
                            Recuperala
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="./assets/js/plugins/jquery/dist/jquery.js"></script>
<script src="/js/CMSCore/User/Login.js"></script>